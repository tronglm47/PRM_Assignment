<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thanh toán gói dịch vụ"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#1A237E"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <!-- Package Info Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#F5F5F5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thông tin gói"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#666666"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvPackageNameDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Basic Maintenance"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1A237E"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvPackageDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thời gian"
                        android:textSize="12sp"
                        android:textColor="#999999" />

                    <TextView
                        android:id="@+id/tvPackageDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30 ngày"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#2E4A8F" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Km bảo dưỡng"
                        android:textSize="12sp"
                        android:textColor="#999999" />

                    <TextView
                        android:id="@+id/tvPackageKmInterval"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5,000 km"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#2E4A8F" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Vehicle Selection -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chọn xe"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#666666"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinnerVehicle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@android:drawable/edit_text"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Price Section -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginVertical="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Giá gói"
            android:textSize="16sp"
            android:textColor="#666666" />

        <TextView
            android:id="@+id/tvPackagePriceDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10.000 VND"
            android:textSize="16sp"
            android:textColor="#1A237E" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tổng thanh toán"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1A237E" />

        <TextView
            android:id="@+id/tvTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10.000 VND"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FF6B6B" />
    </LinearLayout>

    <!-- Payment Method -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phương thức thanh toán"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#666666"
        android:layout_marginBottom="8dp" />

    <RadioGroup
        android:id="@+id/rgPaymentMethod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <RadioButton
            android:id="@+id/rbCash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiền mặt"
            android:textSize="16sp"
            android:padding="8dp"
            android:checked="true" />

        <RadioButton
            android:id="@+id/rbMomo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ví MoMo"
            android:textSize="16sp"
            android:padding="8dp" />

        <RadioButton
            android:id="@+id/rbBankTransfer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chuyển khoản ngân hàng"
            android:textSize="16sp"
            android:padding="8dp" />
    </RadioGroup>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hủy"
            android:textColor="#666666"
            android:background="?attr/selectableItemBackground"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnConfirmPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xác nhận thanh toán"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF6B6B"
            android:paddingHorizontal="24dp" />
    </LinearLayout>

    <!-- Loading Overlay -->
    <FrameLayout
        android:id="@+id/loadingOverlayDialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80FFFFFF"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>

</LinearLayout>

