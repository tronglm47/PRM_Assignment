<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Vehicle Name Title -->
        <TextView
            android:id="@+id/tvVehicleName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tesla Model 3"
            android:textSize="28sp"
            android:textColor="#1A1A1A"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:background="#FFFFFF" />

        <!-- Vehicle Image with Rounded Corners -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="32dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/ivVehicleImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@android:drawable/ic_menu_gallery"
                android:contentDescription="@string/car_image" />

            <!-- Loading indicator for image -->
            <ProgressBar
                android:id="@+id/imageProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />
        </androidx.cardview.widget.CardView>

        <!-- Information Grid (2 columns) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:paddingBottom="24dp">

            <!-- Row 1: Model and Year -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="32dp">

                <!-- Model -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Model"
                        android:textSize="14sp"
                        android:textColor="#999999"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvModel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Model 3"
                        android:textSize="18sp"
                        android:textColor="#1A1A1A"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Year -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Year"
                        android:textSize="14sp"
                        android:textColor="#999999"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvYear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2021"
                        android:textSize="18sp"
                        android:textColor="#1A1A1A"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Row 2: VIN and Mileage -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="32dp">

                <!-- VIN -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VIN"
                        android:textSize="14sp"
                        android:textColor="#999999"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvVin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1HGBH41JXMN109186"
                        android:textSize="18sp"
                        android:textColor="#1A1A1A"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Mileage -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mileage"
                        android:textSize="14sp"
                        android:textColor="#999999"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvMileage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="18sp"
                        android:textColor="#1A1A1A"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Row 3: Price and Owner -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="32dp">

                <!-- Price -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price"
                        android:textSize="14sp"
                        android:textColor="#999999"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50.000 đ"
                        android:textSize="18sp"
                        android:textColor="#1A1A1A"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Owner -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Owner"
                        android:textSize="14sp"
                        android:textColor="#999999"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvOwner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Khách VIP"
                        android:textSize="18sp"
                        android:textColor="#1A1A1A"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Row 4: Address (full width) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textSize="14sp"
                    android:textColor="#999999"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vietnam"
                    android:textSize="18sp"
                    android:textColor="#1A1A1A"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- Book Service Button -->
        <Button
            android:id="@+id/btnBookService"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            android:text="@string/book_service"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/button_rounded"
            android:backgroundTint="#4A90E2"
            android:elevation="0dp" />

        <!-- Loading Indicator -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="32dp"
            android:visibility="gone" />

        <!-- Error Message -->
        <TextView
            android:id="@+id/tvError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="32dp"
            android:text="Failed to load vehicle details"
            android:textSize="16sp"
            android:textColor="#FF6B6B"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>

